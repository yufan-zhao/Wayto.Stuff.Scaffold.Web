{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "uxmid-vue-web": ["./uxmid-vue-web/src/index.ts"],
            "src/*": ["./src/*"],
            "services": ["./src/services/"],
        }
    },
    "include": [
        "uxmid-vue-web/src/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
    "exclude": ["node_modules", "dist", "public"]
}
