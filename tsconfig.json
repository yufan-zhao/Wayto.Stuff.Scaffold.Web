{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "esnext",
        "target": "esnext",
        "jsx": "react",
        "types": ["webpack-env"],
        "importHelpers": true,
        "allowJs": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "paths": {
            "uxmid-vue-web": ["./uxmid-vue-web/src/index.ts"],
            "src/*": ["./src/*"],
            "services": ["./src/services/"],
        }
    },
    "include": [
        "uxmid-vue-web/src/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
    "exclude": ["node_modules", "dist", "public"]
}
